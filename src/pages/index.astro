---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Khan Academy Lectures - Inquiry Institute">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-4">Khan Academy Lectures</h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 mb-8">
      Select lectures and assign aFaculty members to deliver them. Each lecture can be taught by a different aFaculty persona.
    </p>
    
    <div class="mb-8 p-4 bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg">
      <h2 class="text-xl font-semibold mb-2">ðŸŽ¯ New: Dialogic Matrix Chat Delivery</h2>
      <p class="mb-4 text-slate-700 dark:text-slate-300">
        Experience Khan Academy content delivered by a.Faculty in an interruptible, dialogic Matrix chat. Ask questions at any time!
      </p>
      <a 
        href="/matrix-chat" 
        class="inline-block px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-semibold transition-colors"
      >
        Try Matrix Chat Delivery â†’
      </a>
    </div>

    <section class="mt-8">
      <h2 class="text-2xl font-semibold mb-4">Available Lectures</h2>
      <div id="lecturesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Lectures will be populated by JavaScript -->
      </div>
    </section>
  </div>

  <script>
    // Sample lectures data
    const lectures = [
      { id: 1, title: "Introduction to Algebra", subject: "Math", topic: "Algebra", duration: "10:30", youtubeId: "NybHckSEQBI" },
      { id: 2, title: "Basic Geometry", subject: "Math", topic: "Geometry", duration: "15:45", youtubeId: "xZ6g1fX2Y7g" },
      { id: 3, title: "World War I", subject: "History", topic: "World History", duration: "20:15", youtubeId: "_XPZQ0LAlR4" },
    ];

    // Render lectures
    const grid = document.getElementById('lecturesGrid');
    if (grid) {
      grid.innerHTML = lectures.map(lecture => `
        <div class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg p-6 hover:border-amber-500 transition-colors">
          <h3 class="text-xl font-semibold mb-2">${lecture.title}</h3>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">
            ${lecture.subject} â€¢ ${lecture.topic} â€¢ ${lecture.duration}
          </p>
        </div>
      `).join('');
    }
  </script>
</BaseLayout>
